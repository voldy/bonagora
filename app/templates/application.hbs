<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">Bonagora Challenge</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        {{#link-to 'products' class="mdl-navigation__link"}}Products{{/link-to}}
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    {{#if session.isAuthenticated}}
      <span class="mdl-layout-title">Menu</span>
      <nav class="mdl-navigation">
        {{#link-to 'products' class="mdl-navigation__link"}}Products{{/link-to}}
        <a {{action 'logout'}} class="mdl-navigation__link">Logout</a>
      </nav>
    {{else}}
      <nav class="mdl-navigation">
        {{#link-to 'login' class="mdl-navigation__link"}}Login{{/link-to}}
      </nav>
    {{/if}}
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
      <div class="mdl-grid">
        {{outlet}}
      </div>
    </div>
  </main>
</div>
